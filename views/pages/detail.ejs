<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>
<body>
  <%- include('../partials/nav') %>
  <%- include('../partials/title') %>

  <div id="mySidenav" class="sidenav">
      <a id="closebtn">&times;</a>
        <form class="sideNavForm" action="/update/<%-`${recipes[0].id}`%>" method="post">
          <input type="hidden" name="_method" value="put">
          <label for="name">Recipe Name</label>
          <input id="name" class="sideForm" type="text" name="name" value="<%= recipes[0].name %>" required>
          <label for="ingredients">Ingredients</label>
          <input id="ingredients" class="sideForm" type="text" name="ingredients" value="<%= recipes[0].ingredients %>" required>
          <label for="instructions">Instructions</label>
          <input id="instructions" class="sideForm" type="text" name="instructions" value="<%= recipes[0].instructions %>" required>
          <label for="cookbook">Cookbook</label>
          <input id="cookbook" class="sideForm" type="text" name="cookbook" value="<%= recipes[0].namecookbook %>" required>
          <input type="hidden" type="text" name="cookbookID" value="<%= recipes[0].cookbooks_id %>">
          <button type="submit">Update Recipe</button>
        </form>
        <form class="sideNavFormDelete" action="/delete/<%-`${recipes[0].id}`%>" method="post">
          <input type="hidden" name="_method" value="delete">
          <input type="hidden" type="text" name="cookbookID" value="<%= recipes[0].cookbooks_id %>">
          <button type="submit">Delete Recipe:(</button>
        </form>
    </div>
    <span id="openBtn" style="font-size:30px;cursor:pointer"><img src="/styles/icons/cog.svg"></span>

  <% recipes.forEach(recipe => { %>
    <section>
      <h2><%= recipe.name %></h2>
      <h3><%= recipe.namecookbook %></h3>
      <img src="<%= recipe.image %>" />
      <a href="<%= recipe.youtubelink %>"><img class="youTube" src="/styles/icons/youtube2.svg"></a>
      <ul>
        <% ingredients.forEach(ingredient => { %>
          <li><%= ingredient %></li>
        <% }) %>
      </ul>
      <p><%= recipe.instructions %></p>
    </section>
 <% }) %>

 <script
  src="https://code.jquery.com/jquery-3.4.1.js"
  integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU="
  crossorigin="anonymous"></script>
  <script src="/js/app.js"></script>
</body>
</html>