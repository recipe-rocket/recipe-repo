<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>
<body>
    <%- include('../partials/header') %>
  <%- include('../partials/nav') %>
  <%- include('../partials/title') %>

  <div id="mySidenav" class="sidenav">
      <a id="closebtn">&times;</a>
      <form class="sideNavForm" action="/update/<%-`${recipes[0].id}`%>" method="post">
        <input type="hidden" name="_method" value="put">
        <label for="name">Recipe Name</label>
        <input id="name" class="sideForm" type="text" name="name" value="<%= recipes[0].name %>" required>
        <label for="ingredients">Ingredients</label>
        <textarea id="ingredients" class="sideForm" type="text" name="ingredients" value="<%= recipes[0].ingredients %>" required><%= recipes[0].ingredients %></textarea>
        <label for="instructions">Instructions</label>
        <textarea id="instructions" class="sideForm" type="text" name="instructions" value="<%= recipes[0].instructions %>" required><%= recipes[0].instructions %></textarea>
        <label for="cookbook">Cookbook</label>
        <input id="cookbook" class="sideForm" type="text" name="cookbook" value="<%= recipes[0].namecookbook %>" required>
        <input type="hidden" type="text" name="cookbookID" value="<%= recipes[0].cookbooks_id %>">
        <button id="updateRecipe" type="submit">Update Recipe</button>
      </form>
      <form class="sideNavFormDelete" action="/delete/<%-`${recipes[0].id}`%>" method="post">
        <input type="hidden" name="_method" value="delete">
        <input type="hidden" type="text" name="cookbookID" value="<%= recipes[0].cookbooks_id %>">
        <button id="deleteRecipe" type="submit">Delete Recipe</button>
      </form>
    </div>
    <section id="detailBtns">
      <span id="openBtn" style="font-size:30px;cursor:pointer"><img src="/styles/icons/cog.svg"></span>
      <a href="<%= recipes[0].youtubelink %>"><img id="youtube" src="/styles/icons/youtube2.svg"></a>
    </section>

  <% recipes.forEach(recipe => { %>
    <section id="recipeSection">
      <h2><%= recipe.name %></h2>
      <h3>Cookbook: <%= recipe.namecookbook %></h3>
      <img src="<%= recipe.image %>" />
      <h3>Ingredients</h3>
      <ul id="ingredientsList">
        <% ingredients.forEach(ingredient => { %>
          <li><%= ingredient %></li>
        <% }) %>
      </ul>
      <h3>Instructions</h3>
      <p><%= recipe.instructions %></p>
    </section>
 <% }) %>
 <%- include('../partials/up_button') %>
 <script
  src="https://code.jquery.com/jquery-3.4.1.js"
  integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU="
  crossorigin="anonymous"></script>
  <script src="/js/app.js"></script>
</body>
</html>